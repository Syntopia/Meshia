// Contains p, mv, inverse(mv), transpose(inv(mv)) = normalmatrix
uniform mat4    pmvMatrix[4]; 
in vec4    vertex;
in vec4    color;
in vec4   normal;
out vec4    frontColor;
out vec4   rotatedNormal;

void main(void)
{
  frontColor= color;
//  frontColor = pmvMatrix[1][1];
  rotatedNormal =pmvMatrix[3]* normal;
  gl_Position = pmvMatrix[0] * pmvMatrix[1] * vertex;
}